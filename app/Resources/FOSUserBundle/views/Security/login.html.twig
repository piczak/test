{# login #}
{% extends "base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    {# mobile view #}
    <div class="container-flow fos">
        <div class="visible-xs">
            <div class="container">
                <div class="text-center fos-padding">
                    <div class="well fos-padding fos-xs-menu-margin">
                        <div class="row">
                            <ul class="list-inline no-margin">
                                <li>
                                    <div class="fos-link">
                                        <a href="{{ path("register") }}">
                                            Register
                                        </a>
                                    </div>
                                </li>

                                <li>
                                    |
                                </li>

                                <li>
                                    <div class="fos-link">
                                        <a href="{{ path('fos_user_resetting_request') }}">
                                            Password reset
                                        </a>
                                    </div>
                                </li>
                            </ul>

                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                {% if app.request.cookies.has('cart_hash') %}

                <div class="text-center login fos-padding">
                    <div class="well fos-padding fos-xs-menu-margin">
                        <div class="row">
                            <div class="col-xs-12 fos-link">
                                <a href="{{ path('cart_show') }}">
                                    Return to shoping cart
                                </a>
                            </div>

                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                {% endif %}
            </div>
        </div>
        {# end mobile view #}
        
        {# tablet, desktop view #}
        <div class="hidden-xs fos">

            {% if app.request.cookies.has('cart_hash') %}

            <div class="text-center pull-left fos-padding">
                <div class="well fos-padding fos-sm-menu-margin-left">
                    <div class="row">
                        <div class="col-sm-12 fos-link">
                            <a href="{{ path('cart_show') }}">
                                Return to shoping cart
                            </a>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            {% endif %}

            <div class="text-center pull-right fos-padding ">
                <div class="well fos-padding fos-sm-menu-margin-right">
                    <div class="row">
                        <ul class="list-inline no-margin">
                            <li>
                                <div class="fos-link">
                                    <a href="{{ path("register") }}">
                                        Register
                                    </a>
                                </div>
                            </li>

                            <li>
                                |
                            </li>

                            <li>
                                <div class="fos-link">
                                    <a href="{{ path('fos_user_resetting_request') }}">
                                        Password reset
                                    </a>
                                </div>
                            </li>
                        </ul>

                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        {# end tablet, desktop view #}
        
        {# form #}
        <div class="screen-center col-xs-10 col-sm-4 col-md-3 text-center">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <h4>Please sign in</h4>
            <form class="m-t" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" required="" name="_username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" required="" name="_password" >
                </div>
                <button name="_submit" type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
        {# end form #}
        
        <div class="clearfix"></div>
    </div>

{% endblock %}
