{% set body_parameters = 'class="gray-bg"'%}
{% extends "base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% block fos_user_content %}
    <div class="container-flow fos">
        <div class="visible-xs">
            <div class="container">
                <div class="text-center fos-padding">
                    <div class="well fos-padding fos-xs-menu-margin">
                        <div class="row">
                            <ul class="list-inline no-margin">
                                <li>
                                    <div class="fos-link">
                                        Welcome {{ app.user.username }}
                                    </div>
                                </li>

                                <li>
                                    <div class="fos-link">
                                        <a href="{{ path('logout') }}">
                                            Logout <i class="fa fa-sign-out"></i>
                                        </a>
                                    </div>
                                </li>    
                            </ul>

                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="hidden-xs fos">
            <div class="middle-box text-center loginscreen animated fadeInDown fos login  pull-right fos-padding ">
                <div class="well fos-padding fos-sm-menu-margin-right">
                    <div class="row">
                        <ul class="list-inline no-margin">
                            <li>
                                <div class="fos-link">
                                    Welcome {{ app.user.username }}
                                </div>
                            </li>

                            <li>
                                <div class="fos-link">
                                    <a href="{{ path('logout') }}">
                                        Logout <i class="fa fa-sign-out"></i>
                                    </a>
                                </div>
                            </li>    
                        </ul>

                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="middle-box text-center loginscreen animated fadeInDown">
            <div class="screen-center col-xs-12">
                
                <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
                {% if targetUrl %}
                <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
                {% endif %}

                <div>
                    <a href="{{ path('admin_test_page') }}">
                        <button class="btn btn-primary block full-width m-b margin-top-30">
                            Go to products
                        </button>
                    </a>
                </div>

            </div>
        </div>
    </div>
    {% endblock fos_user_content %}
{% endblock %}